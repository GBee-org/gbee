	"scripts": {
		"build": "node esbuild.config.js",
    "unit": "jest",
    "lint": "eslint '*.ts' --quiet --fix",
    "compile": "tsc",
    "test": "npm run compile && npm run unit",
		"dev": "nodemon app.local.ts",
		"typeorm": "pnpx tsx ./node_modules/typeorm/cli.js -d ./src/config/data-source.ts",
