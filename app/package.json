{
	"name": "app",
	"version": "1.0.0",
	"description": "This is express-js application deploy in aws sam app",
	"main": "app.js",
	"private": true,
	"license": "MIT",
	"scripts": {
		"start:dev": "nodemon app.local.ts",
		"build": "node esbuild.config.js",
		"compile": "tsc",
		"lint": "eslint '*.ts' --quiet --fix",
		"test": "npm run compile && npm run unit",
		"typeorm": "ts-node ./node_modules/typeorm/cli.js",
		"typeorm:generate": "pnpm run typeorm migration:generate ./src/database/migrations -d ./src/config/data-source.ts",
		"typeorm:create": "pnpm run typeorm migration:create ./src/database/migrations",
		"typeorm:run": "pnpm run typeorm migration:run -d ./src/config/data-source.ts",
		"typeorm:revert": "pnpm run typeorm migration:revert -d ./src/config/data-source.ts"
	},
	"dependencies": {
		"@types/cookie-parser": "^1.4.8",
		"@types/express-session": "^1.18.1",
		"@types/express-validator": "^2.20.33",
		"@vendia/serverless-express": "^4.12.6",
		"aws-lambda": "^1.0.7",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"esbuild": "^0.25.2",
		"express": "^4.21.2",
		"glob": "9",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"nodemon": "^3.1.9",
		"path-scurry": "1",
		"pg": "^8.14.1",
		"reflect-metadata": "^0.2.2",
		"typeorm": "0.3.23"
	},
	"devDependencies": {
		"@jest/globals": "^29.2.0",
		"@types/aws-lambda": "^8.10.147",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.8",
		"@types/node": "^22.13.4",
		"@types/pg": "^8.11.11",
		"@types/reflect-metadata": "^0.1.0",
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^29.2.1",
		"nodemon": "^2.0.11",
		"prettier": "^2.5.1"
	}
}